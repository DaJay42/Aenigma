root = true

[*]
insert_final_newline = true

[*.g4]
indent_style = space
indent_size = 4
max_line_length = 120

[*.java]
indent_style = tab
indent_size = tab
tab_width = 4
max_line_length = 120

; domain-specific optionals
indent_brace_style = Java
curly_bracket_next_line = false
spaces_around_operators = true
wildcard_import_limit = 5
continuation_indent_size = 8
